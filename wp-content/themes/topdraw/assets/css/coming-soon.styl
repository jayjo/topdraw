.page-template-coming-soon

	header
		display none

	.hero

		h1,h2
			text-shadow none
			color $dark-blue

		h1
			font-size 60px
			letter-spacing -2px
			margin-bottom 20px
			text-align center

		h2
			font-size 32px
			line-height 45px
			margin 0 auto 40px
			width 70%

		.logo
			margin-bottom 10px

			svg
				fill $red
				margin 0 auto
				width 240px