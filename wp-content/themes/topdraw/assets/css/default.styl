.page-template-page-default-page
  padding-top 140px
  
  .ranger
    margin-bottom 0px
    text-align center
    
  .internal_content,
  article
    max-width 840px
    width 100%
    
    img
      display block
      height auto
      margin 0 auto
      max-width 640px
      width 100%
      
    p,
    h4
      margin 0 auto 25px
      max-width 640px
      
    blockquote p
      color #B64247
      font-size 24px
      font-weight bold
      line-height 30px
      max-width 800px
      text-align center
      
  article
    border-bottom 1px solid #E1E1E1
    padding 25px 0
  
@media (min-width: $bp-small) and (max-width: $bp-med)

  .page-template-page-default-page
    padding-top 80px
    
    .internal_content blockquote p,
    article blockquote p
      color #B64247
      font-size 18px
      line-height 20px