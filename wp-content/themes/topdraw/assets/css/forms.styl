.email-us
	margin 45px 0 0 0

	&.bottom
		margin 0 0 40px 0

	a
		background-color transparent
		color $red
		padding 0 5px
		text-decoration none
		transition all $one-fifty

		&:hover
			background-color $red
			color #fff
			transition all $one-fifty

.form:before
	content ""
	display block
	height 4px
	margin 20px auto 0
	width 130px

.error-thing
	display none

label
	font-family $das
	font-size 13px
	font-weight 700

input[type=text], input[type=email], input[type=password]
	background-color #fff
	background-image none
	border 1px solid $grey
	border-radius 2px
	box-shadow none
	color $dark-blue
	font-family $das
	font-size 13px
	font-weight 700
	padding 8px 10px
	outline none
	transition all $one-fifty

	&:focus
		border-color $light-blue
		box-shadow 0 2px 15px -5px rgba(0,0,0,.47)
		color $dark-blue
		transition all $one-fifty

input[type=text]:disabled, input[type=email]:disabled, input[type=password]:disabled
	opacity .3
	
#mc_embed_signup
	background #fff
	box-shadow 0 12px 30px -6px rgba(0,0,0, .3)
	margin 0 auto 30px
	padding 50px 50px 15px 50px
	width 100%
	
	h2
		font-size 24px
		line-height 25px
	
	.indicates-required
		margin-bottom 15px
		color $red

	input
		margin 5px 0 15px
		width 100%

@import 'forms-mobile'

	#mc_embed_signup
		padding 25px 25px 5px 25px
		margin 0 auto